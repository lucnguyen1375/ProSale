<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="100.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ProSale.controller.MuaHangItemController">
   <children>
      <HBox alignment="CENTER_LEFT" layoutX="10.0" prefHeight="110.0" prefWidth="1280.0">
         <children>
            <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ImageView>
            <Label fx:id="labelName" prefHeight="26.0" prefWidth="620.0" text="Sản phẩm">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Label>
            <Label fx:id="labelPrice" alignment="CENTER" maxWidth="150.0" minWidth="150.0" prefHeight="20.0" prefWidth="150.0" text="Đơn giá">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Label fx:id="labelQuantity" alignment="CENTER" maxWidth="150.0" minWidth="150.0" prefHeight="20.0" prefWidth="150.0" text="Số lượng">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Label fx:id="labelTotal" alignment="CENTER" maxWidth="150.0" minWidth="150.0" prefHeight="20.0" prefWidth="150.0" text="Thành tiền">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
</AnchorPane>
